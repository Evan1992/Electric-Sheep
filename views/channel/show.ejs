<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700" rel="stylesheet">
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

        <!-- Font Awesome CSS for star icon -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

        <!-- Customized CSS -->
        <link rel="stylesheet" href="/stylesheets/app.css">
        <link rel="stylesheet" href="/stylesheets/shared/show.css">
        <link rel="stylesheet" href="/stylesheets/channel/channelInfo.css">

        <title>Electric Sheep</title>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/" style="font-weight: 500;">Yi Long</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/bucket-list/show">Bucket List</a></li>
                </ul>
            </div>
        </nav>

        <!-- Info of the channel -->
        <div class="container">
            <!-- Name of the channel -->
            <div class="row">
                <div class="d-flex flex-row">
                    <div class="channel-name"><%= channel.name %></div>
                </div>
            </div>

            <!-- Cover and info of the channel -->
            <div class="row">
                <div class="col-2">
                    <% if(channel.cover.img_data !== undefined) { %>
                        <img src="data:channel/<%= channel.cover.contentType%>;base64, <%= channel.cover.img_data.toString('base64')%>" class="item-img">
                    <% } else { %>
                        <img src="../../pictures/records/record-default.gif" class="item-img">
                    <% } %>
                </div>
                <div class="col">
                    <div class="row"><div class="col">Influencer: <%= channel.influencer %></div></div>
                    <div class="row"><div class="col">Platform:   <%= channel.platform %></div></div>
                    <div class="row">
                        <div class="col-md-auto" style="padding-right: 3px;">
                            Rate:
                        </div>
                        <div class="col" style="padding-left: 0px;">
                            <form class="star-widget">
                                <!-- Add "disabled" to make the stars only visible, but not clickable -->
                                <% if(channel.stars === 10) { %>
                                    <input type="radio" name="rate" id="rate-1" checked disabled>
                                    <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-1" disabled>
                                    <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 9) { %>
                                    <input type="radio" name="rate" id="rate-2" checked disabled>
                                    <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-2" disabled>
                                    <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 8) { %>
                                    <input type="radio" name="rate" id="rate-3" checked disabled>
                                    <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-3" disabled>
                                    <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 7) { %>
                                    <input type="radio" name="rate" id="rate-4" checked disabled>
                                    <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-4" disabled>
                                    <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 6) { %>
                                    <input type="radio" name="rate" id="rate-5" checked disabled>
                                    <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-5" disabled>
                                    <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 5) { %>
                                    <input type="radio" name="rate" id="rate-6" checked disabled>
                                    <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-6" disabled>
                                    <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 4) { %>
                                    <input type="radio" name="rate" id="rate-7" checked disabled>
                                    <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-7" disabled>
                                    <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 3) { %>
                                    <input type="radio" name="rate" id="rate-8" checked disabled>
                                    <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-8" disabled>
                                    <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 2) { %>
                                    <input type="radio" name="rate" id="rate-9" checked disabled>
                                    <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-9" disabled>
                                    <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                <% } %>
                                <% if(channel.stars === 1) { %>
                                    <input type="radio" name="rate" id="rate-10" checked disabled>
                                    <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-10" disabled>
                                    <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Intro of the channel -->
            <% if(channel.intro !== undefined) { %>
                <div class="row">
                    <div class="col intro">Intro</div>
                </div>
                <div id="displaySection">
                    <div class="row">
                        <div class="col" style="white-space: pre-line;"><%= channel.intro %></div>
                    </div>
                </div>
            <% } %>

            <!-- Comment of the channel -->
            <div class="row">
                <div class="col comments">Comments</div>
            </div>
        </div>

        <script type="text/javascript">
            // change event listener
            // Reference: https://stackoverflow.com/questions/69473874/html-radio-button-action-open-input
            document.getElementsByName("rate").forEach(rate => {
                rate.addEventListener('change', function() {
                    if(this.checked) {
                        // Get updated stars
                        const rate = document.getElementsByName("rate")
                        let stars = 0
                        for(let i = 0; i < rate.length; i++) {
                            if(rate[i].checked === true) {
                                stars = rate.length - i
                            }
                        }

                        // Send the updated stars to database
                        // Reference: https://stackoverflow.com/questions/6912197/change-value-of-input-and-submit-form-in-javascript
                        document.getElementById("stars").value = stars
                        document.getElementById("updateRate").submit()
                    }
                })
            })
        </script>

    </body>
</html>