<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700" rel="stylesheet">
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

        <!-- Font Awesome CSS for star icon -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

        <!-- Customized CSS -->
        <link rel="stylesheet" href="/stylesheets/app.css">
        <link rel="stylesheet" href="/stylesheets/shared/show.css">
        <link rel="stylesheet" href="/stylesheets/drama/dramaInfo.css">

        <title>Electric Sheep</title>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/" style="font-weight: 500;">Yi Long</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/bucket-list/show">Bucket List</a></li>
                </ul>
            </div>
        </nav>

        <!-- Info of the drama -->
        <div class="container">
            <!-- Name of the drama -->
            <div class="row">
                <div class="d-flex flex-row">
                    <div class="drama-name"><%= drama.name %></div>
                </div>
            </div>

            <!-- Cover and info of the drama -->
            <div class="row">
                <div class="col-2">
                    <% if(drama.cover.img_data !== undefined) { %>
                        <img src="data:drama/<%= drama.cover.contentType%>;base64, <%= drama.cover.img_data.toString('base64')%>" class="item-img">
                    <% } else { %>
                        <img src="../../pictures/dramas/drama-default.png" class="item-img">
                    <% } %>
                </div>
                <div class="col">
                    <div class="row"><div class="col">Director: <%= drama.director %></div></div>
                    <div class="row"><div class="col">Year: <%= drama.year %></div></div>
                    <div class="row">
                        <div class="col-md-auto" style="padding-right: 3px;">
                            Rate:
                        </div>
                        <div class="col" style="padding-left: 0px;">
                            <form class="star-widget">
                                <!-- Add "disabled" to make the stars only visible, but not clickable -->
                                <% if(drama.stars === 10) { %>
                                    <input type="radio" name="rate" id="rate-1" checked disabled>
                                    <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-1" disabled>
                                    <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 9) { %>
                                    <input type="radio" name="rate" id="rate-2" checked disabled>
                                    <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-2" disabled>
                                    <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 8) { %>
                                    <input type="radio" name="rate" id="rate-3" checked disabled>
                                    <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-3" disabled>
                                    <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 7) { %>
                                    <input type="radio" name="rate" id="rate-4" checked disabled>
                                    <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-4" disabled>
                                    <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 6) { %>
                                    <input type="radio" name="rate" id="rate-5" checked disabled>
                                    <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-5" disabled>
                                    <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 5) { %>
                                    <input type="radio" name="rate" id="rate-6" checked disabled>
                                    <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-6" disabled>
                                    <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 4) { %>
                                    <input type="radio" name="rate" id="rate-7" checked disabled>
                                    <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-7" disabled>
                                    <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 3) { %>
                                    <input type="radio" name="rate" id="rate-8" checked disabled>
                                    <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-8" disabled>
                                    <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 2) { %>
                                    <input type="radio" name="rate" id="rate-9" checked disabled>
                                    <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-9" disabled>
                                    <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                <% } %>
                                <% if(drama.stars === 1) { %>
                                    <input type="radio" name="rate" id="rate-10" checked disabled>
                                    <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                <% } else { %>
                                    <input type="radio" name="rate" id="rate-10" disabled>
                                    <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Lines from the drama -->
            <div class="row">
                <div class="col lines">Lines</div>
            </div>
            <!-- Show the existing lines -->
            <% drama.lines.forEach((line, index) => { %>
                <div class="line">
                    <div class="row">
                        <div class="col" style="white-space: pre-line;"><%= line %></div>
                    </div>
                    <div class="row">
                        <form action="/drama/<%=drama._id %>?_method=PUT" method=POST>
                            <div class="col">
                                <!-- Reference: https://stackoverflow.com/questions/14007613/change-text-from-submit-on-input-tag -->
                                <input type="submit" name="delete_line" value="Delete">
                            </div>
                        </form>
                    </div>
                </div>
            <% }) %>

            <!-- Commentary -->
            <div class="row">
                <div class="col comments">Commentaries</div>
            </div>
            <!-- Existing commentary list -->
            <% for(let i = 0; i < commentaries.length; i++) { %>
                <% commentary = commentaries[i] %>
                    <li>
                        <a href="/drama/<%= drama._id %>/commentary/<%= commentary.id %>"><%= commentary.title %></a>
                    </li>
            <% } %>
        </div>
    </body>
</html>