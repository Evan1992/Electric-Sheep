<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700" rel="stylesheet">
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

        <!-- Font Awesome CSS for star icon -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

        <!-- Customized CSS -->
        <link rel="stylesheet" href="/stylesheets/app.css">
        <link rel="stylesheet" href="/stylesheets/shared/show.css">
        <link rel="stylesheet" href="/stylesheets/software/softwareInfo.css">

        <title>Electric Sheep</title>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/" style="font-weight: 500;">Yi Long</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/bucket-list/show">Bucket List</a></li>
                </ul>
            </div>
        </nav>

        <!-- Info of the software -->
        <div class="container">
            <!-- Name of the software -->
            <div class="row">
                <div class="d-flex flex-row">
                    <div class="software-name"><%= software.name %></div>
                    <% if (isAdmin) { %>
                        <div class="edit-tag">&nbsp;&nbsp;<a href="edit">Edit</a></div>
                        <div class="delete-tag">
                            <form action="/software/<%= software._id %>?_method=DELETE" method=POST>
                                <button type="submit">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Cover and info of the software -->
            <div class="row">
                <div class="col-2">
                    <% if(software.cover.img_data !== undefined) { %>
                        <img src="data:software/<%= software.cover.contentType%>;base64, <%= software.cover.img_data.toString('base64')%>" class="item-img">
                    <% } else { %>
                        <img src="../../../pictures/records/record-default.gif" class="item-img">
                    <% } %>
                </div>
                <div class="col">
                    <div class="row"><div class="col">Company: <%= software.company %></div></div>
                    <div class="row">
                        <div class="col">
                            Platforms:
                            <% if(software.platforms.length !== 0) { %>
                                <% software.platforms.forEach(platform => { %>
                                    <div class="selected-item">
                                        <%= platform %>
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-auto" style="padding-right: 3px;">
                            Rate:
                        </div>
                        <div class="col" style="padding-left: 0px;">
                            <% if (isAdmin) { %>
                                <form class="star-widget" id="updateRate" action="/software/<%= software._id %>?_method=PUT" method=POST enctype="multipart/form-data">
                                    <% if(software.stars === 10) { %>
                                        <input type="radio" name="rate" id="rate-1" checked>
                                        <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-1">
                                        <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 9) { %>
                                        <input type="radio" name="rate" id="rate-2" checked>
                                        <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-2">
                                        <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 8) { %>
                                        <input type="radio" name="rate" id="rate-3" checked>
                                        <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-3">
                                        <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 7) { %>
                                        <input type="radio" name="rate" id="rate-4" checked>
                                        <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-4">
                                        <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 6) { %>
                                        <input type="radio" name="rate" id="rate-5" checked>
                                        <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-5">
                                        <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 5) { %>
                                        <input type="radio" name="rate" id="rate-6" checked>
                                        <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-6">
                                        <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 4) { %>
                                        <input type="radio" name="rate" id="rate-7" checked>
                                        <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-7">
                                        <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 3) { %>
                                        <input type="radio" name="rate" id="rate-8" checked>
                                        <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-8">
                                        <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 2) { %>
                                        <input type="radio" name="rate" id="rate-9" checked>
                                        <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-9">
                                        <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 1) { %>
                                        <input type="radio" name="rate" id="rate-10" checked>
                                        <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-10">
                                        <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                    <% } %>
                                    <input type="hidden" name="stars" id="stars" value=0 />
                                </form>
                            <% } else { %>
                                <form class="star-widget">
                                    <!-- Add "disabled" to make the stars only visible, but not clickable -->
                                    <% if(software.stars === 10) { %>
                                        <input type="radio" name="rate" id="rate-1" checked disabled>
                                        <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-1" disabled>
                                        <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 9) { %>
                                        <input type="radio" name="rate" id="rate-2" checked disabled>
                                        <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-2" disabled>
                                        <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 8) { %>
                                        <input type="radio" name="rate" id="rate-3" checked disabled>
                                        <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-3" disabled>
                                        <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 7) { %>
                                        <input type="radio" name="rate" id="rate-4" checked disabled>
                                        <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-4" disabled>
                                        <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 6) { %>
                                        <input type="radio" name="rate" id="rate-5" checked disabled>
                                        <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-5" disabled>
                                        <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 5) { %>
                                        <input type="radio" name="rate" id="rate-6" checked disabled>
                                        <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-6" disabled>
                                        <label id="rate-6" for="rate-6" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 4) { %>
                                        <input type="radio" name="rate" id="rate-7" checked disabled>
                                        <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-7" disabled>
                                        <label id="rate-7" for="rate-7" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 3) { %>
                                        <input type="radio" name="rate" id="rate-8" checked disabled>
                                        <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-8" disabled>
                                        <label id="rate-8" for="rate-8" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 2) { %>
                                        <input type="radio" name="rate" id="rate-9" checked disabled>
                                        <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-9" disabled>
                                        <label id="rate-9" for="rate-9" class="fas fa-star"></label>
                                    <% } %>
                                    <% if(software.stars === 1) { %>
                                        <input type="radio" name="rate" id="rate-10" checked disabled>
                                        <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                    <% } else { %>
                                        <input type="radio" name="rate" id="rate-10" disabled>
                                        <label id="rate-10" for="rate-10" class="fas fa-star"></label>
                                    <% } %>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Intro of the software -->
            <% if(software.intro !== undefined) { %>
                <div class="row">
                    <div class="col intro">Intro</div>
                </div>
                <!-- Existing intro -->
                <div id="displaySection">
                    <div class="row">
                        <div class="col" style="white-space: pre-line;"><%= software.intro %></div>
                    </div>
                    <% if (isAdmin) { %>
                        <div class="row">
                            <div class="col">
                                <input id="editButton" type="submit" value="Edit">
                            </div>
                        </div>
                    <% } %>
                </div>
                <!-- Intro form for edit -->
                <form id="editIntroForm" action="/software/<%= software._id %>?_method=PUT" method=POST enctype="multipart/form-data" novalidate class="hidden">
                    <div class="row">
                        <div class="col">
                            <!-- The name attribute is needed to reference the form data after the form is submitted -->
                            <textarea id="introInput" name="intro" type="text" style="width: 60%; height: 100px" required><%= software.intro %></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="submit">
                        </div>
                    </div>
                </form>
            <% } else { %>
                <% if (isAdmin) { %>
                    <div class="row">
                        <div class="col intro">Intro</div>
                    </div>
                    <!-- Intro form for new -->
                    <form id="newIntroForm" action="/software/<%= software._id %>?_method=PUT" method=POST enctype="multipart/form-data" novalidate class="validated-form">
                        <div class="row">
                            <div class="col">
                                <!-- The name attribute is needed to reference the form data after the form is submitted -->
                                <textarea id="introInput" name="intro" type="text" style="width: 60%; height: 100px" required></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input type="submit">
                            </div>
                        </div>
                    </form>
                <% } %>
            <% } %>
        </div>

        <script src="/rate.js" type="text/javascript"></script>

        <script type="text/javascript">
            /**
             * Script to edit the intro
             */
            const introForm = document.getElementById('editIntroForm');
            const editButton = document.getElementById('editButton');
            const displaySection = document.getElementById('displaySection');

            if (introForm !== null) {
                introForm.addEventListener('submit', (e) => {
                    introForm.classList.add('hidden');
                    displaySection.classList.remove('hidden');
                });
            }

            if (editButton !== null) {
                editButton.addEventListener('click', () => {
                    displaySection.classList.add('hidden');
                    introForm.classList.remove('hidden');
                });
            }
        </script>
    </body>
</html>