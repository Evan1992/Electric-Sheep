<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700" rel="stylesheet">
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

        <!-- Font Awesome CSS for star icon -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

        <!-- Customized CSS -->
        <link rel="stylesheet" href="/stylesheets/app.css">
        <link rel="stylesheet" href="/stylesheets/bookInfo.css">


        <title>Electric Sheep</title>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/" style="font-weight: 500;">Yi Long</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/bucket-list/show">Bucket List</a></li>
                </ul>
            </div>
        </nav>

        <!-- Info of the book -->
        <div class="container">
            <!-- Name of the book -->
            <div class="row">
                <div class="d-flex flex-row">
                    <div class="book-name"><%= book.name %></div>
                    <div class="edit-tag">&nbsp;&nbsp;<a href="edit">Edit</a></div>
                    <div class="delete-tag">
                        <form action="/book/<%= book._id %>?_method=DELETE" method=POST>
                            <button type="submit">Delete</button>
                            <!-- <input type="submit" value="Delete"> -->
                        </form>
                    </div>
                </div>
            </div>

            <!-- Cover and info of the book -->
            <div class="row">
                <div class="col-2">
                    <% if(book.cover.img_data !== undefined) { %>
                        <img src="data:book/<%= book.cover.contentType%>;base64, <%= book.cover.img_data.toString('base64')%>" class="item-img">
                    <% } else { %>
                        <img src="../../pictures/books/book-default.gif" class="item-img">
                    <% } %>
                </div>
                <div class="col">
                    <div class="row"><div class="col">Author: <%= book.author %></div></div>
                    <div class="row"><div class="col">Press: <%= book.press %></div></div>
                    <div class="row"><div class="col">Year: <%= book.year %></div></div>
                    <div class="row">
                        <div class="col-md-auto" style="padding-right: 3px;">
                            Rate:
                        </div>
                        <div class="col" style="padding-left: 0px;">
                            <div class="star-widget">
                                <input type="radio" name="rate" id="rate-1">
                                <label id="rate-1" for="rate-1" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-2">
                                <label id="rate-2" for="rate-2" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-3">
                                <label id="rate-3" for="rate-3" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-4">
                                <label id="rate-4" for="rate-4" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-5">
                                <label id="rate-5" for="rate-5" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-6">
                                <label id="rate-6" for="rate-1" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-7">
                                <label id="rate-7" for="rate-2" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-8">
                                <label id="rate-8" for="rate-3" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-9">
                                <label id="rate-9" for="rate-4" class="fas fa-star"></label>
                                <input type="radio" name="rate" id="rate-10">
                                <label id="rate-10" for="rate-5" class="fas fa-star"></label>
                            </div>
                        </div>
                    </div>
                    <% if(!book.haveRead) { %>
                        <form action="/book/<%= book._id %>?_method=PUT" method=POST enctype="multipart/form-data" novalidate class="validated-form">
                            <input type="submit" name="haveRead" value="Have Read">
                        </form>
                    <% } %>
                </div>
            </div>
            
            <!-- Extract of the book -->
            <div class="row">
                <div class="col extracts">Extracts</div>
            </div>

            <!-- Comment of the book -->
            <div class="row">
                <div class="col comments">Comments</div>
            </div>
        </div>
    </body>
</html>